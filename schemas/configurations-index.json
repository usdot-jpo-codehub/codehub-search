{
  "settings": {
    "analysis": {
      "analyzer": {
        "title_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": "cdh_char",
          "filter": [
            "lowercase",
            "cdh_synonym_filter",
            "ngram_title"
          ]
        },
        "title_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": "cdh_char",
          "filter": [
            "lowercase",
            "cdh_synonym_filter"
          ]
        },
        "lowercase_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      },
      "filter": {
        "ngram_title": {
          "type": "ngram",
          "min_gram": "4",
          "max_gram": "10"
        },
        "cdh_synonym_filter": {
          "type": "synonym",
          "synonyms": [
            "intelligent transportation systems => its",
            "department of transportation => dot"
          ]
        },
        "cdh_stop": {
          "type": "stop",
          "stopwords": "_english_"
        }
      },
      "char_filter": {
        "cdh_char": {
          "type": "mapping",
          "mappings": []
        }
      }
    },
    "index": {
      "max_ngram_diff": 6
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "text",
        "index": false
      },
      "name": {
        "type": "text"
      },
      "categories": {
        "properties": {
          "id": {
            "type": "text",
            "index": false
          },
          "name": {
            "type": "text"
          },
          "description": {
            "type": "text"
          },
          "isEnabled": {
            "type": "boolean"
          },
          "lastModified": {
            "type": "date"
          }
        }
      }
    }
  }
}
